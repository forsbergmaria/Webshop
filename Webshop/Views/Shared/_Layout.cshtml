<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Webshop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Webshop.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<body>
  <header>
<nav class="navbar navbar-expand-lg navbar-dark p-4">
            <img class="logo navbar-brand" src="/images/Bergslagen_Logo-EPS_White.png" />
  <div class="container-fluid">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
                            <a class="nav-link" asp-controller="Item" asp-action="AllItems"><span class="category">ALLA PRODUKTER</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/Item/Index/1"><span class="category">HERRKLÄDER</span></a>
        </li>
        <li class="nav-item">
                            <a class="nav-link" href="#"><span class="category">DAMKLÄDER</span></a>
        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><span class="category">KOSTTILLSKOTT</span></a>
                        </li>
      </ul>
    </div>
            <div class="d-flex search-component">
                                      @using (Html.BeginForm("Index", "Item", FormMethod.Post, new{@class="d-flex"}))
                         {
                              @Html.TextBox("searchstring")
                                <button class="search-btn" type="submit">
                                    <i class="bi bi-search"></i>
                                </button>     
                         }
                                <a class="cart-btn" href="/ShoppingCart/Index">
                        <span class="material-symbols-outlined" id="cart-icon">
                            shopping_cart
                        </span><span class="badge rounded-pill rounded-circle bg-info">@ViewBag.Quantity</span>
                    </a>
        </div>
  </div>
</nav>
  </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <style>
        .material-symbols-outlined {
  font-variation-settings:
  'FILL' 1,
  'wght' 300,
  'GRAD' 0,
  'opsz' 48
}
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
