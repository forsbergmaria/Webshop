@using Models
@model List<AdminViewModel>

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<div>
    <div class="table-hover">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Förnamn</th>
                    <th>Efternamn</th>
                    <th>E-postadress</th>
                    <th>Administratörsroll</th>
                    <th>Hantera</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var account in Model)
                {
                    <tr>
                        <td>@account.FirstName</td>
                        <td>@account.LastName</td>
                        <td>@account.Email</td>
                        @if(account.Role == null)
                        {
                            <td>@ViewBag.Role</td>
                        } else
                        {
                          <td>@account.Role</td>  
                        }
                        @if(ViewBag.Role == "Huvudadministratör")
                        {
                            <td><button class="btn btn-primary manage-btn"><a asp-controller="Accounts" asp-action="ManageAccount">Redigera</a></button><button class="btn btn-danger manage-btn">Ta bort konto</button></td>
                        } else
                        {
                            <td>Du har inte behörighet att hantera konton</td>
                        }

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>