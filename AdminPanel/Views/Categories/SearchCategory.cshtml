@using Models
@model List<Category>

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<div>
    <h3>Visar sökresultat för "@ViewBag.SearchString":</h3>
    <div class="table-hover">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Kategorinamn</th>
                    <th>Hantera</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>



                        <td>
                            <button class="btn btn-light subcategory-btn"><a asp-controller="Categories" asp-action="AllSubcategories" asp-route-id="@category.CategoryId">Se underkategorier</a></button>
                            @if (User.IsInRole("Huvudadministratör"))
                            {
                                <button class="btn btn-primary manage-btn"><a asp-controller="Accounts" asp-action="ManageAccount" asp-route-id="@category.CategoryId">Redigera</a></button>
                                <button class="btn btn-danger manage-btn"><a asp-controller="Accounts" asp-action="DeleteAccount" asp-route-id="@category.CategoryId" onclick="return confirm('Är du säker på att du vill ta bort denna kategori? Det går inte att ångra.')">Ta bort kategori</a></button>
                            }
                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
