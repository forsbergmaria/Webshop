@using Models
@model CreateSubcategoryViewModel

<body>
    <h2>Skapa ny underkategori</h2>
    <form method="post" asp-controller="Categories" asp-action="CreateSubcategory">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.CategoryName, new { @class = "col-md-2 control-label" })
            <select asp-for="CategoryName" asp-items="@ViewBag.CategoryList" id="category-list"></select>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SubcategoryName, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(m => m.SubcategoryName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lägg till" class="btn btn-success" id="btn-subcategory-submit" />
            </div>
        </div>
    </form>
</body>
